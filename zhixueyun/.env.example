# 应用配置
NEXT_PUBLIC_APP_NAME=智学云
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API配置
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/zhixueyun"

# JWT配置
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# 上传配置
NEXT_PUBLIC_UPLOAD_URL=/api/upload
MAX_FILE_SIZE=5242880 # 5MB

# 第三方服务配置
# 示例：支付服务
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_API_SECRET=your-payment-api-secret

# 示例：对象存储
STORAGE_ACCESS_KEY=your-storage-access-key
STORAGE_SECRET_KEY=your-storage-secret-key
STORAGE_BUCKET=your-bucket-name
STORAGE_REGION=your-bucket-region 